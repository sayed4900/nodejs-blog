<div class="author">
    <h1 class="author__heading">Welcome, </h1>
    <p>Web Developer</p>
</div>

<div class="hero-image">
    <img src="/img/hero-image.webp" alt="person meditate on Allah's creation" >
</div>

<section class="articles">
    <h2 class="articles__heading" >Latest Posts</h2>

    
    <ul class="article-ul">
        <% postData.forEach(post =>{ %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title%></span>
                    <span class="article-list__date"><%= post.createdAt.toString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>
    
    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    
    <% } %>
</section>